<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="bulkPriceDialog" title="{i18n>BULK_PRICE_DIALOG_TITLE}" stretchOnPhone="true">
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="{i18n>BULK_PRICE_LABEL_APPLY_PERCENT}"/>
                <Input id="inpBulkPercentage" value="{createModel>/bulkPercent}" type="Number" placeholder="Enter % e.g., 10" liveChange=".onBulkPercentageChange"/>

                <Table id="bulkPriceTable" items="{createModel>/selectedProducts}">
                    <columns>
                        <Column>
                            <Text text="{i18n>BULK_PRICE_COLUMN_PRODUCT}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>BULK_PRICE_COLUMN_CURRENT_PRICE}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>BULK_PRICE_COLUMN_PERCENT}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>BULK_PRICE_COLUMN_NEW_PRICE}"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{createModel>productName}"/>
                                <ObjectNumber number="{createModel>price}" unit="₹"/>
                                <Input value="{createModel>individualPercent}" type="Number" change=".onIndividualPercentageChange"/>
                                <ObjectNumber number="{createModel>newPrice}" unit="₹"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="{i18n>BULK_PRICE_BUTTON_SAVE}" type="Accept" press=".onSaveInPrice"/>
                <Button text="{i18n>BULK_PRICE_BUTTON_CANCEL}" type="Reject" press=".onCancelInPrice"/>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
