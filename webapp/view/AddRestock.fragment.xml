<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="reStockDialog" title="{i18n>RESTOCK_DIALOG_TITLE}" stretchOnPhone="true">
        <content>
            <VBox class="sapUiSmallMargin">
                <Table id="reStockTable" items="{createModel>/selectedProducts}">
                    <columns>
                        <Column>
                            <Text text="{i18n>RESTOCK_COLUMN_PRODUCT}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>RESTOCK_COLUMN_CURRENT_PRICE}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>RESTOCK_COLUMN_NEW_PRICE}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>RESTOCK_COLUMN_CURRENT_STOCK}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>RESTOCK_COLUMN_NEW_STOCK}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>RESTOCK_COLUMN_SUPPLIER}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>RESTOCK_COLUMN_DATE}"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{createModel>productName}"/>
                                <ObjectNumber number="{createModel>price}" unit="â‚¹"/>
                                <Input value="{createModel>newPrice}" type="Number"/>
                                <ObjectNumber number="{createModel>stockQuantity}"/>
                                <Input value="{createModel>newStockQuantity}" type="Number" change=".onIndividualPercentageChange"/>
                                <Input value="{createModel>supplier}"/>
                                <DatePicker value="{createModel>newlastRestocked}" displayFormat="yyyy-MM-dd" valueFormat="yyyy-MM-dd" required="true" editable="false"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="{i18n>RESTOCK_BUTTON_SAVE}" type="Accept" press=".onSaveRestock"/>
                <Button text="{i18n>RESTOCK_BUTTON_CANCEL}" type="Reject" press=".onCancelReStock"/>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
