<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">

    <Dialog id="addProductDialog" title="{i18n>ADD_PRODUCT_DIALOG_TITLE}">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm editable="true" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2">
                    <f:content>
                        <Label text="{i18n>ADD_PRODUCT_LABEL_NAME}"/>
                        <Input value="{createModel>/productName}" required="true" placeholder="{i18n>ADD_PRODUCT_PLACEHOLDER_NAME}"/>

                        <Label text="{i18n>ADD_PRODUCT_LABEL_CATEGORY}"/>
                        <Input value="{createModel>/category}" required="true" placeholder="{i18n>ADD_PRODUCT_PLACEHOLDER_CATEGORY}"/>

                        <Label text="{i18n>ADD_PRODUCT_LABEL_PRICE}"/>
                        <Input value="{createModel>/price}" type="Number" required="true" placeholder="{i18n>ADD_PRODUCT_PLACEHOLDER_PRICE}"/>

                        <Label text="{i18n>ADD_PRODUCT_LABEL_STOCK}"/>
                        <Input value="{createModel>/stockQuantity}" type="Number" required="true" placeholder="{i18n>ADD_PRODUCT_PLACEHOLDER_STOCK}"/>

                        <Label text="{i18n>ADD_PRODUCT_LABEL_SUPPLIER}"/>
                        <Input value="{createModel>/supplier}" required="true" placeholder="{i18n>ADD_PRODUCT_PLACEHOLDER_SUPPLIER}"/>

                        <Label text="{i18n>ADD_PRODUCT_LABEL_LAST_RESTOCKED}"/>
                        <DatePicker value="{createModel>/lastRestocked}" placeholder="{i18n>ADD_PRODUCT_PLACEHOLDER_DATE}" valueFormat="yyyy-MM-dd" displayFormat="yyyy-MM-dd"/>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button id="dialogActionBtn" text="{i18n>ADD_PRODUCT_BUTTON_ADD}" type="Accept" press="onSaveProduct"/>
                <Button text="{i18n>ADD_PRODUCT_BUTTON_CANCEL}" type="Reject" press="onCancelProduct"/>
            </Toolbar>
        </footer>
    </Dialog>

</core:FragmentDefinition>
