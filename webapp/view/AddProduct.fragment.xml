<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">

    <Dialog id="addProductDialog" title="Add New Product" stretchOnPhone="true">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm editable="true" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2">
                    <f:content>
                        <Label text="Product Name"/>
                        <Input value="{createModel>/productName}" required="true" placeholder="Enter product name"/>

                        <Label text="Category"/>
                        <Input value="{createModel>/category}" required="true" placeholder="Enter category"/>

                        <Label text="Price"/>
                        <Input value="{createModel>/price}" type="Number" required="true" placeholder="Enter price"/>

                        <Label text="Stock Quantity"/>
                        <Input value="{createModel>/stockQuantity}" type="Number" required="true" placeholder="Enter stock"/>

                        <Label text="Supplier"/>
                        <Input value="{createModel>/supplier}" required="true" placeholder="Enter supplier"/>

                        <Label text="Last Restocked"/>
                        <DatePicker value="{createModel>/lastRestocked}" placeholder="Select date" valueFormat="yyyy-MM-dd" displayFormat="yyyy-MM-dd"/>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>

        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button id="dialogActionBtn" text="Add" type="Accept" press="onSaveProduct"/>
                <Button text="Cancel" type="Reject" press="onCancelProduct"/>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
